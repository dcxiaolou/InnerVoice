<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fm_introduce_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <!--FM模块详情页滑动菜单中的的推荐中RecyclerView的子项-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <com.android.dcxiaolou.innervoice.defineUI.ProportionImageView
            android:id="@+id/fm_introduce_image"
            android:layout_width="124dp"
            android:layout_height="0dp"
            dc:heightProportion="1"
            dc:widthProportion="1"
            android:src="@drawable/fm_cover"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!--android:ellipsize="end" 省略号在结尾-->
            <TextView
                android:id="@+id/fm_introduce_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="2"
                android:textSize="16sp"
                android:text="不要高估自己和任何一个人的关系"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主播: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/fm_introduce_speak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="十点夜听 "/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fm_introduce_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/view"
                    android:drawablePadding="3dp"
                    android:textSize="12sp"
                    android:text="1000"/>

                <TextView
                    android:id="@+id/fm_introduce_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/digg"
                    android:drawablePadding="3dp"
                    android:textSize="12sp"
                    android:text="900"/>

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>